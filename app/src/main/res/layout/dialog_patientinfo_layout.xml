        <TextView
            android:id="@+id/tev_deposit_dialog_patientinfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorFontPatientInfo2"
            android:layout_gravity="center"
            android:text="8921"/>
    </LinearLayout>
    <Button
        android:id="@+id/Btn_PatientInfo_GB"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="关            闭"
        android:background="@color/colorFontPatientInfo2"
        android:textSize="16sp"
        android:textColor="#ffffff"
        />
</LinearLayout>