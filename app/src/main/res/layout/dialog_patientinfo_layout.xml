        <TextView
            android:id="@+id/tev_dept_name_dialog_patientinfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorFontPatientInfo2"
            android:layout_gravity="center"
            android:text="急诊科护办"/>
    </LinearLayout>

    //预交金
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#dddddd"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
            android:textColor="@color/colorFontPatientInfo1"
            android:text="预交金"/>
        <TextView
            android:id="@+id/tev_total_dialog_patientinfo_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorFontPatientInfo2"
            android:layout_gravity="center"
            android:text="789412"/>
    </LinearLayout>

    //总费用
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="12dp"
            android:layout_gravity="center"
